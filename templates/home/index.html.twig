{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Liste des V√©hicules üöó</h1>

    {% if vehiculeInfos is empty %}
        <div class="alert alert-warning text-center">Aucun v√©hicule disponible pour le moment.</div>
    {% else %}
        <div class="row">
            {% for vehiculeInfo in vehiculeInfos %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">{{ vehiculeInfo.vehicule.marque }}</h5>
                            <p class="card-text">
                                <strong>Immatriculation :</strong> {{ vehiculeInfo.vehicule.immatriculation }}<br>
                                <strong>Prix Journalier :</strong> {{ vehiculeInfo.vehicule.prixJournalier }}‚Ç¨<br>
                                <strong>Note Moyenne :</strong> {{ vehiculeInfo.noteMoyenne }} ‚≠ê<br>
                                <strong>Dernier Client :</strong> {{ vehiculeInfo.dernierClient }}
                            </p>
                            {% if vehiculeInfo.vehicule.disponible %}
                                {% if app.user %}
                                    <a href="{{ path('app_reservation_new', {id: vehiculeInfo.vehicule.id}) }}" class="btn btn-success">R√©server</a>
                                {% else %}
                                    <button class="btn btn-secondary" disabled>R√©server (Connectez-vous)</button>
                                {% endif %}
                            {% else %}
                                <button class="btn btn-secondary" disabled>Indisponible</button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}